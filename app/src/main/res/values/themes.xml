<resources>

    <style name="ThemeOverlay.Jellyfinandroidtv.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.Jellyfin.Fullscreen" parent="Theme.Jellyfin">
        <item name="android:actionBarStyle">@style/Widget.Theme.Jellyfin.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.Jellyfin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Jellyfin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Jellyfin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
